{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "ESNext",
      "target": "ES6",
      "declaration": true,
      "declarationDir": "./dist",
      "declarationMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
  